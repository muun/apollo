<?xml version="1.0" encoding="utf-8"?>
<io.muun.apollo.presentation.ui.view.MuunButtonLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

        <io.muun.apollo.presentation.ui.view.MuunHeader
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevated="true" />

        <io.muun.apollo.presentation.ui.view.HtmlTextView
                android:id="@+id/anon_feedback_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/muun_screen_margin"
                android:layout_marginRight="@dimen/muun_screen_margin"
                android:layout_marginTop="@dimen/muun_screen_margin"
                android:text="@string/anon_feedback_explanation"
                android:textSize="@dimen/muun_text_size_body"
                android:textColor="@color/text_secondary_color"
                android:lineSpacingMultiplier="1.2"
                android:gravity="center_horizontal" />

        <View style="@style/expander" />

        <ImageView
                android:id="@+id/anon_feedback_image"
                android:layout_width="202dp"
                android:layout_height="146dp"
                android:src="@drawable/ic_envelope"
                android:layout_gravity="center" />

        <View style="@style/expander" />
    </LinearLayout>

    <io.muun.apollo.presentation.ui.view.MuunButton
            android:id="@+id/anon_feedback_open_email_app"
            style="@style/muun_button_secondary"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/anon_feedback_open_email" />

</io.muun.apollo.presentation.ui.view.MuunButtonLayout>
