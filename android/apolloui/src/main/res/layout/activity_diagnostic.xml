<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/muun_text_size_body"
            android:textColor="@color/text_secondary_color"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <io.muun.apollo.presentation.ui.view.MuunButton
            android:id="@+id/begin_button"
            style="@style/muun_button_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_gap"
            android:text="Begin Recovery Process"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:ignore="HardcodedText"
            app:layout_constraintTop_toBottomOf="@+id/status_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
            android:id="@+id/log_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/begin_button"
            app:layout_constraintBottom_toTopOf="@+id/scan_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/log_text_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap" />
    </ScrollView>

    <io.muun.apollo.presentation.ui.view.MuunButton
            app:layout_constraintTop_toBottomOf="@+id/log_scrollview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/scan_button"
            style="@style/muun_button_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_gap"
            android:text="Scan for utxos"
            android:enabled="false"
            android:layout_margin="8dp"
            tools:ignore="HardcodedText" />

    <io.muun.apollo.presentation.ui.view.MuunButton
            android:id="@+id/send_button"
            style="@style/muun_button_primary"
            android:layout_below="@+id/scan_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_gap"
            android:text="Send logs to houston"
            tools:ignore="HardcodedText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/scan_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
