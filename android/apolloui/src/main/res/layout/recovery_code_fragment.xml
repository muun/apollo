<?xml version="1.0" encoding="utf-8"?>
<io.muun.apollo.presentation.ui.view.MuunButtonLayout
        tools:viewBindingIgnore="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/muun_screen_margin"
                android:paddingRight="@dimen/muun_screen_margin"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="32dp"
                    android:textColor="@color/text_primary_color"
                    android:text="@string/enter_recovery_code_title" />

            <io.muun.apollo.presentation.ui.view.MuunRecoveryCodeBox
                    android:id="@+id/enter_recovery_code_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>


            <io.muun.apollo.presentation.ui.view.MuunButton
                    style="@style/muun_button_secondary"
                    android:id="@+id/use_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/use_password"
                    android:textStyle="normal"
                    android:background="@android:color/transparent" />

        </LinearLayout>
    </ScrollView>

    <io.muun.apollo.presentation.ui.view.MuunButton
            style="@style/muun_button_primary"
            android:id="@+id/enter_recovery_code_continue"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/enter_recovery_code_continue" />

</io.muun.apollo.presentation.ui.view.MuunButtonLayout>