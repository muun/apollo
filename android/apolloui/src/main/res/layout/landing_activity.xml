<?xml version="1.0" encoding="utf-8"?>
<io.muun.apollo.presentation.ui.view.MuunButtonLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="260dp"
                tools:layout_width="250dp"
                tools:layout_height="100dp"
                android:layout_marginBottom="16dp"
                app:lottie_autoPlay="true"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/explanation"
                app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/explanation"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/lottie_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recover_wallet_button">

            <TextView
                    style="@style/explanation"
                    android:maxWidth="260dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/slogan" />

            <TextView
                    style="@style/explanation"
                    android:maxWidth="260dp"
                    android:layout_marginBottom="0dp"
                    android:text="@string/slogan_second_line" />
        </LinearLayout>

        <io.muun.apollo.presentation.ui.view.MuunButton
                style="@style/muun_button_secondary"
                android:id="@+id/recover_wallet_button"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/login_start"
                android:contentDescription="@string/login_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/create_wallet_button" />

        <io.muun.apollo.presentation.ui.view.MuunButton
                style="@style/muun_button_primary"
                android:id="@+id/create_wallet_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/signup_start"
                android:contentDescription="@string/signup_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</io.muun.apollo.presentation.ui.view.MuunButtonLayout>