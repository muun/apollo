<?xml version="1.0" encoding="utf-8"?>
<io.muun.apollo.presentation.ui.view.MuunButtonLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

        <ImageView
                android:id="@+id/change_password_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/change_password"
                android:maxWidth="230dp"
                android:layout_marginBottom="28dp"
                app:layout_constraintVertical_chainStyle="packed"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/change_password_start_explanation_title" />

        <TextView
                android:id="@+id/change_password_start_explanation_title"
                style="@style/explanation"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                tools:text="@string/edit_password_explanation_title"
                app:layout_constraintTop_toBottomOf="@id/change_password_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/change_password_start_explanation" />

        <TextView
                android:id="@+id/change_password_start_explanation"
                style="@style/explanation"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                tools:text="@string/edit_password_explanation"
                app:layout_constraintTop_toBottomOf="@id/change_password_start_explanation_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/change_password_start" />

        <io.muun.apollo.presentation.ui.view.MuunButton
                android:id="@+id/change_password_start"
                style="@style/muun_button_primary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/edit_password_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</io.muun.apollo.presentation.ui.view.MuunButtonLayout>