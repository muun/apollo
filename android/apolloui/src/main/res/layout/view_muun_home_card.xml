<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/muun_task_card_active_bg">

    <ImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/ic_settings" />

    <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon"
            android:layout_marginEnd="8dp"
            android:lineSpacingMultiplier="1.25"
            android:text="@string/new_operation_to"
            android:textColor="@color/muun_gray_dark"
            android:textSize="13sp"
            android:typeface="normal"
            tools:text="Back up your wallet. Create a back-up to never lose access to your wallet." />

</RelativeLayout>